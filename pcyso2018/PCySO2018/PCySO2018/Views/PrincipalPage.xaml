<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCySO2018.Views.PrincipalPage"
             Title="- - - - - PCySO - - - - -">
    <ContentPage.Content>
        <Grid>
            <Image Source="checkronmini" Aspect="AspectFill"/>
            <StackLayout
                    Padding="0,2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="End">

                <Image 
                    Source="luartexto"
                    WidthRequest="235">
                </Image>
            </StackLayout>
            <BoxView Color="ForestGreen" Opacity="0.18"/>
            <StackLayout
                   Padding="10">
                <Image
                     Source="textopaginaprincipal"
                     WidthRequest="200">
                </Image>
                <Grid
                    Margin="10,50"
                    VerticalOptions="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                        

                    <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            TextColor="White"
                            FontAttributes="Bold"  
                            FontSize="20" 
                            Text="Recursos Humanos"
                            VerticalOptions="CenterAndExpand"
                            >
                    </Label>
                    <Button
                        x:Name="btnrh"
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="Black"
                        Image="checkronminiblanco2a"
                        BorderRadius="23"
                        VerticalOptions="CenterAndExpand"/>
                   
                    <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            TextColor="White"
                            FontAttributes="Bold"  
                            FontSize="20" 
                            Text="Recursos Materiales"
                            VerticalOptions="CenterAndExpand">
                    </Label>
                    <Button
                        x:Name="btnrm"
                        Grid.Row="1"
                        Grid.Column="1"
                        BackgroundColor="Black"
                        Image="checkronminiblanco2a"
                        BorderRadius="23"
                        VerticalOptions="CenterAndExpand"/>

                    <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            TextColor="Black"
                            FontAttributes="Bold"  
                            FontSize="20" 
                            Text="Unidad Médica"
                            VerticalOptions="CenterAndExpand">
                    </Label>
                    <Button
                        x:Name="btnum"
                        Grid.Row="2"
                        Grid.Column="1"
                        BackgroundColor="Black"
                        Image="checkronminiblanco2a"
                        BorderRadius="23"
                       VerticalOptions="CenterAndExpand"/>

                    <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            TextColor="Black"
                            FontAttributes="Bold"  
                            FontSize="20" 
                            Text="Ayuda"
                            VerticalOptions="CenterAndExpand">
                    </Label>
                    <Button
                        x:Name="btnayu"
                        Grid.Row="3"
                        Grid.Column="1"
                        BackgroundColor="Black"
                        Image="checkronminiblanco2a"
                        BorderRadius="23"
                       VerticalOptions="CenterAndExpand"/>
                    <!--<Image
                             Grid.Row="3"
                             Grid.Column="1"
                             Source="checkronmini"
                             WidthRequest="25"
                             VerticalOptions="CenterAndExpand"/>
                    <BoxView 
                             Grid.Row="3"
                             Grid.Column="1"
                             Color="White" 
                             Opacity="0.18">
                    </BoxView>-->

                    
                </Grid>
               
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>