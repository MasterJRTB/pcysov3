                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        x:Name="contactoTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Text="Datos del Contacto / Emergencia"/>

                    <Label
                        Grid.Row="19"
                        Grid.Column="0"
                        x:Name="nomcontacTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Nombre"/>
                    <Entry 
                        Grid.Row="19"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Nombre Completo"/>

                    <Label
                        Grid.Row="20"
                        Grid.Column="0"
                        x:Name="parecontacTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Parentesco"/>
                    <Entry 
                        Grid.Row="20"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Parentesco"/>
                    
                    <Label
                        Grid.Row="21"
                        Grid.Column="0"
                        x:Name="telcontacTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Teléfono"/>
                    <Entry 
                        Grid.Row="21"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Teléfono"/>

                    <Label
                        Grid.Row="22"
                        Grid.Column="0"
                        x:Name="celcontacTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Celular"/>
                    <Entry 
                        Grid.Row="22"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Celular"/>

                    
                        <Button
                           Grid.Row="23"
                           Grid.Column="0"
                           BackgroundColor="DarkGreen"
                           BorderRadius="35"
                           HeightRequest="70"
                           IsEnabled="True"
                           FontSize="Large"
                           Text="Nuevo"
                           TextColor="White">
                        </Button>

                         <Button
                           Grid.Row="23"
                           Grid.Column="1"
                           BackgroundColor="DarkGreen"
                           BorderRadius="35"
                           HeightRequest="70"
                           IsEnabled="True"
                           FontSize="Large"  
                           Text="Agregar"
                           TextColor="White">
                         </Button>

                         <Button
                           Grid.Row="23"
                           Grid.Column="2"
                           BackgroundColor="DarkGreen"
                           BorderRadius="35"
                           HeightRequest="70"
                           IsEnabled="True"
                           FontSize="Large"
                           Text="Listar"
                           TextColor="White">
                         </Button>

                         <Button
                            Grid.Row="24"
                            Grid.Column="0"
                            BackgroundColor="DarkGreen"
                            BorderRadius="35"
                            HeightRequest="70"
                            IsEnabled="True"
                            FontSize="Large"
                            Text="Buscar"
                            TextColor="White">
                         </Button>

                         <Button
                            Grid.Row="24"
                            Grid.Column="1"
                            BackgroundColor="DarkGreen"
                            BorderRadius="35"
                            HeightRequest="70"
                            IsEnabled="True"
                            FontSize="Large" 
                            Text="Actualizar"
                            TextColor="White">
                         </Button>

                         <Button
                           Grid.Row="24"
                           Grid.Column="2"
                           BackgroundColor="DarkGreen"
                           BorderRadius="35"
                           HeightRequest="70"
                           IsEnabled="True"
                           FontSize="Large"  
                           Text="Eliminar"
                           TextColor="White">
                         </Button>
               </Grid>

            </ScrollView>
