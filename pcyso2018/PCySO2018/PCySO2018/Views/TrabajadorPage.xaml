<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCySO2018.Views.TrabajadorPage"
             Title="- - - - - PCySO - - - - -">

    <ContentPage.Content>
        <Grid>
            <Image Source="cuadrotrabajador" Aspect="AspectFill"/>
            <StackLayout
                   Padding="10"
                   HorizontalOptions="Center"
                   Orientation="Horizontal"
                   VerticalOptions="Start">
                <Image
                     Source="textorhtrabjador"
                     WidthRequest="200">
                </Image>
            </StackLayout>
            <StackLayout
                    Padding="0,2,0,2"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="End">

                    <Image 
                    Source="luartexto"
                    WidthRequest="235">
                    </Image>
                </StackLayout>
                <BoxView Color="ForestGreen" Opacity="0.18"/>

                <ScrollView>
                    <Grid
                    Margin="10,70"
                    VerticalOptions="Start">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        x:Name="nomTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"    
                        Text="Nombre"/>
                    <Entry 
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Nombre"/>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        x:Name="tipTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Tipo"/>
                    <Entry 
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Tipo de contrato"/>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        x:Name="ctTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Centro de Trabajo"/>
                    <Entry 
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Nombre Centro de Trabajo"/>

                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        x:Name="depTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Departamento"/>
                    <Entry 
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Departamento / Área"/>

                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        x:Name="pueTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Puesto"/>
                    <Entry 
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Puesto de trabajo"/>

                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        x:Name="horTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Horario"/>
                    <Entry 
                        Grid.Row="5"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Horario de Trabajo"/>

                    <Label
                        Grid.Row="6"
                        Grid.Column="0"
                        x:Name="telofiTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Teléfono"/>
                    <Entry 
                        Grid.Row="6"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Teléfono de Oficina"/>

                    <Label
                        Grid.Row="7"
                        Grid.Column="0"
                        x:Name="extofiTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Extensión"/>
