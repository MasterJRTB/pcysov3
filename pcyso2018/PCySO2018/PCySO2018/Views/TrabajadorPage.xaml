                        Grid.Row="14"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Teléfono de Oficina"/>

                    <Label
