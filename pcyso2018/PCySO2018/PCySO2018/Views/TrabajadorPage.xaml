                        Grid.Row="12"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        x:Name="jefeTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Text="Datos del Supervisor / Jefe"/>

                    <Label
                        Grid.Row="13"
                        Grid.Column="0"
                        x:Name="nombjefeTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Nombre"/>
                    <Entry 
                        Grid.Row="13"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Nombre completo"/>

                    <Label
                        Grid.Row="14"
                        Grid.Column="0"
                        x:Name="teljefeTrabajador"
                        TextColor="White"
                        FontSize="Large"
