                    <!-- ********************************************************** -->
                    <!--        sección datos generales del trabajador              -->
                    <!-- ********************************************************** -->

                    <Label 
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3" 
                        x:Name="dgtrabajador"
                        HorizontalOptions="Center"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="Datos Generales del Trabajador"/>

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        x:Name="nomTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"    
