                        Grid.Row="8"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Correo Electrónico"/>

                    <Label
                        Grid.Row="9"
                        Grid.Column="0"
                        x:Name="faTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Fecha de Ingreso"/>
