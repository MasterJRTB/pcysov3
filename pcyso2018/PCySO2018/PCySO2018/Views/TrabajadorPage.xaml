                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        x:Name="enomtrabajador"
                        Text="{Binding NombreTrabajador}"
                        TextColor="White"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="A. Paterno, A. Materno, Nombre"/>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
