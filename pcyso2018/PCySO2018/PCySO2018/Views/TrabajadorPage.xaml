                        Grid.Row="9"
                        Grid.Column="1"
                        TextColor="White"/>

                    <Label
                        Grid.Row="10"
                        Grid.Column="0"
                        x:Name="nssTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="Seguro Social"/>
                    <Entry 
                        Grid.Row="10"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Número del Seguro Social"/>
                        
                    <Label
                        Grid.Row="11"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        x:Name="espaTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        FontAttributes="Bold"
                        Text=""/>
