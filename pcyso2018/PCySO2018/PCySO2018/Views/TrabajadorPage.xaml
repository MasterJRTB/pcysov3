                        Grid.Row="7"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        TextColor="White"
                        Keyboard="Numeric"
                        PlaceholderColor="WhiteSmoke"
                        Placeholder="Ext."/>

                    <Label
                        Grid.Row="8"
                        Grid.Column="0"
                        x:Name="correoTrabajador"
                        TextColor="White"
                        FontSize="Large"
                        FontAttributes="Bold"
                        Text="E-Mail"/>
